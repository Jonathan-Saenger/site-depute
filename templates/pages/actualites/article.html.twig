{% extends 'base.html.twig' %}

{% block title %}{{ article.title }} - Actualité{% endblock %}

{% block body %}
    <section class="news-detail-section" style="padding: 3rem 0; background: var(--white); min-height: 80vh;">
        <div class="container-news">
            <article class="news-detail-card" style="background: var(--white); border-radius: 12px; box-shadow: 0 5px 24px rgba(0,0,0,0.07); overflow: hidden; max-width: 800px; margin: 0 auto;">
                {% if article.imageUrl %}
                <div class="news-detail-image" style="height: 320px; overflow: hidden;">
                    <img src="{{ article.imageUrl }}" alt="{{ article.title }}" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                {% endif %}
                <div class="news-detail-content" style="padding: 2.5rem;">
                    <span class="news-date" style="color: var(--text-light); font-size: 1rem; letter-spacing: 1px;">{{ article.createdAt|date('d F Y') }}</span>
                    <h1 style="margin-top: 0.5rem; margin-bottom: 1.5rem;">{{ article.title }}</h1>
                    <div class="news-full-content" style="font-size: 1.15rem; color: var(--text-color); line-height: 1.8;">
                        {{ article.content|raw }}
                    </div>
                    <div style="margin-top: 2.5rem; text-align: left;">
                        <a href="{{ path('app_news_category', {'category': 'circonscription'}) }}" class="btn btn-outlined">← Retour aux actualités</a>
                    </div>
                </div>
            </article>
        </div>
    </section>
{% endblock %}
