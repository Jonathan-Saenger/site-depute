{% extends 'base.html.twig' %}

{% block title %}Actualités - Eric François{% endblock %}

{% block body %}
    <section class="hero-circonscription">
        <div class="container-circonscription">
            <div class="circonscription-content">
                <h1>En circonscription</h1>
                <p class="actu-subtitle">Découvrez mon activité de député au plus proche de vous sur le terrain !</p>
            </div>
        </div>
        <div class="cantons-circonscription">
            <p>Ferrette - Readersdorf - Bendorf - Liegsdorf - Biederthal - Blotzheim - Bruebach - Chalampé - Chavannes - Chavannes-sur-l'Étang - Chêne-Bourg - Chêne-Bougeries - Chêne-Pâquier - Chêne-Thuy</p>
        </div>
    </section>

    <section class="news-section">
        <div class="container-news">
            <div class="news-filters">
                <div class="search-box">
                    <input type="text" placeholder="Rechercher un article..." class="search-input">
                </div>
            </div>

            <div class="news-grid">
                <p id="no-articles-message" style="display: none; color: #0066cc; grid-column: 1 / -1; text-align: center; font-size: 1.2rem; font-style: italic; align-self: center; justify-self: center;">Aucun article ne correspond à votre recherche</p>
                {% for article in articles %}
                    <article class="news-card">
                        <div class="news-image">
                            <img src="{{ article.imageUrl }}" alt="{{ article.title }}">
                        </div>
                        <div class="news-content">
                            <span class="news-date">{{ article.createdAt|date('d F Y') }}</span>
                            <h3>{{ article.title }}</h3>
                            <p>{{ article.content|striptags|slice(0, 150) }}...</p>
                            <a href="{{ path('app_news_show', {'id': article.id}) }}" class="read-more">Lire la suite <i class="fas fa-arrow-right"></i></a>
                        </div>
                    </article>
                {% else %}
                    <div class="no-results">
                        <p>Aucun article n'est disponible pour le moment.</p>
                    </div>
                {% endfor %}
            </div>
    </section>
{% endblock %}
